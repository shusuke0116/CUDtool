<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>CUD学習ツール</title>
</head>
<body>
  <h1><%= data[0].item %></h1>
  <hr>

  <form action="/answer" method="post" autocomplete="off">
  <div id="que">
    <div>
      <p><%= data[0].que %></p>
    </div>
    <div>
      <p>選択肢</p>
      <p><%= data[0].name %></p>
    </div>
    <div>
      <p><%= data[0].sen %></p>
    </div>    
  </div>
  
  <div>
    <input type="hidden" name="id" value="<%= data[0].t_id %>">
    <p><input type="submit" value="評価"></p>
  </div>
  </form>

  <% if(e == 1){ %>
    <div id="eva">
      <div>
        <p>別色覚視点</p>
      </div>
      <div>
        <% if(data[0].gb == 1){ %>
          <p><%= data[0].good %></p>
        <% } else{ %>
          <p><%= data[0].bad %></p>
        <% } %>
      </div>
      <div>
        <p><%= data[0].adv %></p>
      </div>
    </div>
  <% } %>

  <div>
    <p><input type="submit" value="次の項目へ"></p>
  </div>


  
</body>
</html>