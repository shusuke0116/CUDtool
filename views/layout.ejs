<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>CUD学習ツール</title>
</head>
<script>
  function choiceColor(code) {
  const sen = document.querySelector("#sen");
  sen.style.color = code;
}
</script>
<style type="text/css">
span#sen {
color:<%= col[0] %>;
}
</style>
<body>
  <h1><%= textdata[0].item %></h1>
  <hr>

  <form action="/answer" method="post" autocomplete="off">
  <div id="que">
    <div>
      <p><%= textdata[0].que %></p>
    </div>
    <div>
      <p>選択肢</p>
      <p>
        <% let c; 
          for (let row of choices){ 
            if(row.ccode == col[0]) c = "checked";
            else c = "";
        %>
          <font color="<%= row.ccode %>">
            <input type="radio" name="choice" id="<%= row.ccode %>" value="<%= row.id %>" onclick="choiceColor(this.id)" <%= c %>><%= row.name %>
          </font>
          <input type="hidden" name="gb" value="<%= row.gb %>">
        <% } %>
      </p>
    <div>
      <span id="sen"><%= textdata[0].sen %></span>
    </div>    
  </div>
  
  <div>
    <input type="hidden" name="id" value="<%= textdata[0].id %>">
    <p><input type="submit" value="評価"></p>
  </div>
  </form>

  <% if(e == 1){ %>
    <div id="eva">
      <div>
        <p>別色覚視点</p>
        <p>P型：<span style="color:<%= col[1] %>"><%= textdata[0].sen %></span></p>
        <p>D型：<span style="color:<%= col[2] %>"><%= textdata[0].sen %></span></p>
        <p>S型：<span style="color:<%= col[3] %>"><%= textdata[0].sen %></span></p>
      </div>
      <div>
        <% if(gb == 0) { %> 
          <p><%= textdata[0].bad %></p>
        <% }else{ %> 
          <p><%= textdata[0].good %></p>  
        <% } %>
      </div>
      <div>
        <p><%= textdata[0].adv %></p>
      </div>
    </div>
  <% } %>

  <div>
    <p><input type="submit" value="次の項目へ"></p>
  </div>

</body>
</html>